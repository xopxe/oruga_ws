{
  "name": "oruga jazzy desktop",
  "dockerFile": "Dockerfile",
  "runArgs": [
    "--privileged",
    "--network=host",
    "--ipc=host"
  ],
  "workspaceMount": "source=${localWorkspaceFolder},target=/oruga_ws,type=bind",
  "workspaceFolder": "/oruga_ws",
  "mounts": [
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.bash_history,target=/home/ubuntu/.bash_history,type=bind",
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
    "source=/dev,target=/dev,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
        "extensions":[
          "ms-vscode.cpptools",
          "ms-vscode.cpptools-extension-pack",
          "ms-vscode.cmake-tools",
          "ms-python.python",
          "KevinRose.vsc-python-indent",
          "DavidAnson.vscode-markdownlint",
          "GitLab.gitlab-workflow",
          "redhat.vscode-xml",
          "BlueGlassBlock.better-json5"
        ]
    }
  },
  "containerEnv": {
    "DISPLAY": "${localEnv:DISPLAY}"
  },
  "postCreateCommand": "./.devcontainer/postCreateCommand.sh"
}
